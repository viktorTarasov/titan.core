module Bug521125 {

type component EmptyCT {

}

type AVP AVP_list;

type AVP_list AVP_Grouped;

type union Union {
	AVP_Grouped select1,
	integer i
}

type record AVP {
	integer id,
	Union selection
} with {
	variant (selection) "CROSSTAG(
		select1, id = 1;
		i, id = 2
	)"
}

testcase tc_Bug521125() runs on EmptyCT {
	var AVP avp := {
		id := 1,
		selection := {
			select1 := {
				id := 2,
				selection := {
					i := 4
				}
			}
		}
	}

	var bitstring bs := encvalue(avp);
	var AVP result;
	var integer i := decvalue(bs, result);

	if (match(avp, result)) {
		setverdict(pass);
	} else {
		setverdict(fail, match(avp, result));
	}
}

control {
	execute(tc_Bug521125())
}

} with { encode "RAW" }
